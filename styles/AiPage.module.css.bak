/* styles/AiPage.module.css */
.container {
  max-width: 1000px; /* was 700px, now wider */
  margin: 3rem auto;
  padding: 3rem 3rem; /* increased padding for breathing room */
  background: #f9fafb; /* very light gray */
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
    Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  color: #222;
  text-align: center;
  transition: max-width 0.3s ease;
}

/* Keep the mobile responsiveness consistent */
@media (max-width: 768px) {
  .container {
    max-width: 90vw; /* relative width on smaller screens */
    padding: 2rem 1.5rem;
  }
}

.container h1 {
  font-size: 2.4rem;
  margin-bottom: 1.5rem;
  font-weight: 600;
  color: #111;
}

.container input[type="file"] {
  margin: 1.5rem 0;
  border: 1px solid #ccc;
  border-radius: 6px;
  padding: 10px;
  background: #fff;
  color: #333;
  cursor: pointer;
  font-size: 1rem;
  width: 100%;
  max-width: 400px;
  transition: border-color 0.3s ease;
}

.container input[type="file"]:hover {
  border-color: #888;
}

.container button {
  background-color: #0070f3;
  color: white;
  border: none;
  border-radius: 8px;
  padding: 0.75rem 1.5rem;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.3s ease;
  margin-left: 1rem;
  font-family: inherit;
}

.container button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  background-color: #99c2ff;
  margin-left: 0;
}

.container button:hover:not(:disabled) {
  background-color: #005bb5;
}

.restoredImage {
  margin-top: 2rem;
  border-radius: 12px;
  max-width: 100%;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  display: inline-block;
}

.downloadButtons {
  margin-top: 1rem;
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.downloadButtons button {
  background: transparent;
  color: #0070f3;
  border: 1px solid #0070f3;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  margin-left: 0;
  font-weight: 600;
}

.downloadButtons button:hover {
  background: #0070f3;
  color: #fff;
}

/* FAQ */
.faqSection {
  margin-top: 4rem;
  max-width: 700px;
  margin-inline: auto;
  padding: 2rem;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 20px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.04);
  position: relative;
  overflow: hidden;
}

.faqSection::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(0, 112, 243, 0.3), transparent);
}

.sectionTitle {
  text-align: center;
  font-size: 2rem;
  margin-bottom: 2.5rem;
  color: #111;
  font-weight: 700;
  background: linear-gradient(135deg, #0070f3 0%, #005bb5 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.02em;
}

.accordion details {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  padding: 1.5rem;
  border-radius: 16px;
  margin-bottom: 1rem;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.6);
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.accordion details::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4px;
  height: 100%;
  background: linear-gradient(135deg, #0070f3, #005bb5);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.accordion details:hover {
  transform: translateY(-2px);
  box-shadow: 0 16px 32px rgba(0, 0, 0, 0.08);
}

.accordion details:hover::before {
  transform: scaleY(1);
}

.accordion details[open] {
  background: linear-gradient(135deg, #fafbff 0%, #f0f4ff 100%);
}

.accordion details[open]::before {
  transform: scaleY(1);
}

.accordion summary {
  font-weight: 600;
  font-size: 1.05rem;
  outline: none;
  color: #111;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  transition: color 0.3s ease;
}

.accordion summary::marker {
  content: '';
}

.accordion summary::before {
  content: '▶';
  color: #0070f3;
  font-size: 0.8rem;
  transition: transform 0.3s ease;
}

.accordion details[open] summary::before {
  transform: rotate(90deg);
}

.accordion p {
  margin-top: 1rem;
  font-size: 0.95rem;
  color: #555;
  line-height: 1.6;
  padding-left: 1.5rem;
}

/* Testimonials */
.testimonials {
  margin-top: 4rem;
  padding: 3rem 2rem;
  background: linear-gradient(135deg, #0070f3 0%, #005bb5 100%);
  text-align: center;
  color: white;
  border-radius: 20px;
  position: relative;
  overflow: hidden;
}

.testimonials::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  pointer-events: none;
}

.testimonials h3 {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 2rem;
  color: white;
  position: relative;
  z-index: 1;
}

.testimonials blockquote {
  font-size: 1.1rem;
  font-style: italic;
  margin: 2rem auto;
  max-width: 600px;
  line-height: 1.6;
  position: relative;
  padding: 2rem;
  border-left: none;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  z-index: 1;
}

.testimonials blockquote::before {
  content: '"';
  position: absolute;
  top: -10px;
  left: 20px;
  font-size: 4rem;
  color: rgba(255, 255, 255, 0.3);
  line-height: 1;
}

.testimonials blockquote span {
  display: block;
  margin-top: 1rem;
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
  font-style: normal;
  font-weight: 600;
}

/* How it works */
.howItWorksSection {
  margin: 5rem auto 0;
  padding: 3rem 2rem;
  max-width: 800px;
  border-radius: 20px;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.06);
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.howItWorksSection::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(0, 112, 243, 0.3), transparent);
}

.howItWorksSection:hover {
  transform: translateY(-4px);
  box-shadow: 0 32px 64px rgba(0, 0, 0, 0.1);
}

.howItWorksSection h3 {
  font-size: 2.25rem;
  font-weight: 700;
  margin-bottom: 2rem;
  color: #111;
  letter-spacing: -0.02em;
  background: linear-gradient(135deg, #0070f3 0%, #005bb5 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.howItWorksList {
  list-style: none;
  padding: 0;
  margin: 0 auto;
  text-align: left;
  max-width: 500px;
}

.howItWorksList li {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  font-size: 1.05rem;
  padding: 1.5rem 0;
  color: #333;
  border-bottom: 1px solid rgba(0, 112, 243, 0.1);
  position: relative;
  transition: all 0.3s ease;
}

.howItWorksList li::before {
  content: counter(step-counter);
  counter-increment: step-counter;
  background: linear-gradient(135deg, #0070f3, #005bb5);
  color: white;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 0.9rem;
  flex-shrink: 0;
  margin-top: 0.1rem;
}

.howItWorksList {
  counter-reset: step-counter;
}

.howItWorksList li:hover {
  background: linear-gradient(135deg, #fafbff 0%, #f0f4ff 100%);
  padding-left: 1rem;
  border-radius: 12px;
  margin: 0 -1rem;
  padding-right: 1rem;
}

.howItWorksList li:last-child {
  border-bottom: none;
}

.howItWorksList li span {
  font-size: 1.05rem;
  line-height: 1.5;
  font-weight: 500;
}

.privacyStatement {
  margin: 4rem auto 0;
  padding: 2rem;
  max-width: 680px;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border: 1px solid rgba(0, 112, 243, 0.1);
  border-radius: 16px;
  color: #555;
  font-size: 0.95rem;
  text-align: center;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.04);
  position: relative;
  overflow: hidden;
}

.privacyStatement::before {
  content: '🔒';
  position: absolute;
  top: 1rem;
  right: 1rem;
  font-size: 1.2rem;
  opacity: 0.6;
}

.privacyStatement h4 {
  color: #333;
  margin-bottom: 1rem;
  font-size: 1.1rem;
  font-weight: 600;
}

.poweredBy {
  margin-top: 3rem;
  text-align: center;
  font-size: 0.875rem;
  color: #888;
  opacity: 0.8;
  transition: all 0.3s ease;
  padding: 1rem;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12px;
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.poweredBy:hover {
  opacity: 1;
  color: #0070f3;
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .faqSection {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
  }
  
  .sectionTitle {
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .accordion details {
    background: linear-gradient(135deg, #374151 0%, #1f2937 100%);
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .accordion details[open] {
    background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  }
  
  .accordion summary {
    color: #e5e7eb;
  }
  
  .accordion p {
    color: #d1d5db;
  }
  
  .howItWorksSection {
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
  }
  
  .howItWorksSection h3 {
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .howItWorksList li {
    color: #e5e7eb;
    border-bottom-color: rgba(96, 165, 250, 0.2);
  }
  
  .howItWorksList li:hover {
    background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  }
  
  .privacyStatement {
    background: linear-gradient(135deg, #374151 0%, #1f2937 100%);
    color: #d1d5db;
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .privacyStatement h4 {
    color: #e5e7eb;
  }
  
  .poweredBy {
    background: linear-gradient(135deg, #374151 0%, #1f2937 100%);
    color: #9ca3af;
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .poweredBy:hover {
    color: #60a5fa;
  }
}

/* Responsive design */
@media (max-width: 768px) {
  .faqSection,
  .howItWorksSection {
    margin-left: 1rem;
    margin-right: 1rem;
    padding: 1.5rem;
  }
  
  .testimonials {
    margin-left: 1rem;
    margin-right: 1rem;
    padding: 2rem 1.5rem;
  }
  
  .sectionTitle,
  .howItWorksSection h3 {
    font-size: 1.75rem;
  }
  
  .howItWorksList li {
    padding: 1rem 0;
  }
}

/* ⚙️ Upload image container */
.uploadContainer {
  background: #fff;
  border: 1px solid #dcdfe4;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.04);
  margin-bottom: 2.5rem;
}

/* ⚙️ Refined Credits Info Box – Greek Revival Vibes */
.creditsInfo {
  background: linear-gradient(135deg, #fbfbfb 0%, #f0f0f0 100%);
  border: 1px solid rgba(38, 56, 82, 0.12);
  border-radius: 14px;
  padding: 1.25rem 1.5rem;
  margin: 1.5rem 0;
  box-shadow: 0 4px 14px rgba(0, 0, 0, 0.025);
  position: relative;
  overflow: hidden;
  transition: box-shadow 0.2s ease;
}

.creditsInfo:hover {
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.04);
}

.creditsInfo::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(38, 56, 82, 0.3),
    transparent
  );
}

.creditsInfo p {
  margin: 0;
  font-size: 0.95rem;
  line-height: 1.6;
  color: #2e2e2e;
  font-family: 'Space Grotesk', 'Helvetica Neue', sans-serif;
}

.creditsInfo strong {
  color: #22459f;
  font-weight: 600;
}

.creditsInfo br {
  display: block;
  margin-bottom: 0.5rem;
}

/* 💎 Premium Tier Styling */
.creditsInfo.premium {
  background: linear-gradient(135deg, #e7ecf8 0%, #d7e3f2 100%);
  border-color: rgba(34, 69, 159, 0.2);
}

.creditsInfo.premium::before {
  background: linear-gradient(
    90deg,
    transparent,
    rgba(34, 69, 159, 0.3),
    transparent
  );
}

.creditsInfo.premium strong {
  color: #1a357c;
}

/* 🌙 Dark Mode Support */
@media (prefers-color-scheme: dark) {
  .creditsInfo {
    background: linear-gradient(135deg, #22242a 0%, #2b2e35 100%);
    color: #e0e4ea;
    border-color: rgba(34, 69, 159, 0.3);
  }

  .creditsInfo::before {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(34, 69, 159, 0.4),
      transparent
    );
  }

  .creditsInfo p {
    color: #dfe3ea;
  }

  .creditsInfo strong {
    color: #8baefc;
  }

  .creditsInfo.premium {
    background: linear-gradient(135deg, #1c2537 0%, #2a3650 100%);
    border-color: rgba(139, 174, 252, 0.25);
  }

  .creditsInfo.premium::before {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(139, 174, 252, 0.35),
      transparent
    );
  }

  .creditsInfo.premium strong {
    color: #aac8ff;
  }
}

/* Image Comparison Container */
.imageComparisonContainer {
  display: flex;
  gap: 2rem;
  justify-content: center;
  margin-top: 2rem;
  flex-wrap: wrap; /* stack vertically on smaller screens */
}

.imageBox {
  flex: 1 1 300px; /* flexible basis with min width */
  max-width: 400px; /* prevent too large images */
  text-align: center;
}

.imageWrapper {
  border: 1px solid #ccc;
  border-radius: 8px;
  overflow: hidden;
  max-height: 80vh;
}

.image {
  display: block;
  width: 100%;
  height: auto;
  border-radius: 8px;
}

/* Restore Button */
.restoreButton {
  background: linear-gradient(135deg, #ff6ec4, #7873f5);
  color: white;
  font-weight: 700;
  font-size: 1.2rem;
  padding: 0.75rem 2rem;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  box-shadow: 0 5px 15px rgba(255, 110, 196, 0.5);
  transition: background 0.3s ease, box-shadow 0.3s ease;
}

.restoreButton:hover:not(:disabled) {
  background: linear-gradient(135deg, #e84fa9, #5f5dca);
  box-shadow: 0 8px 20px rgba(232, 79, 169, 0.7);
}

.restoreButton:disabled {
  background-color: #e0c7db;
  color: #9b7ea3;
  cursor: not-allowed;
  box-shadow: none;
}



/* Spinner styles */
.spinner {
  border: 4px solid rgba(0, 0, 0, 0.1);
  border-left-color: #0070f3; /* Accent color */
  border-radius: 50%;
  width: 36px;
  height: 36px;
  animation: spin 1s linear infinite;
  margin: 0 auto;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* Loading overlay for image container */
.loadingOverlay {
  position: relative;
}

.loadingOverlay::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.6);
  z-index: 10;
  pointer-events: none;
  border-radius: 12px;
}

/* Spinner inside overlay */
.loadingOverlay .spinner {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -18px; /* half spinner height */
  margin-left: -18px; /* half spinner width */
  z-index: 11;
  pointer-events: auto;
}

/* Button with spinner */
.buttonWithSpinner {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.buttonWithSpinner .spinner {
  position: absolute;
  right: 1rem;
  width: 18px;
  height: 18px;
  border-width: 3px;
  border-left-color: white;
  animation-duration: 0.75s;
}

/* Disable button text visibility when loading */
.buttonWithSpinner.loading > span {
  visibility: hidden;
}

/* Disabled button override with spinner */
button:disabled.buttonWithSpinner .spinner {
  border-left-color: #99c2ff;
}





